<script>
const mainScreen=document.getElementById("screen-main");
const prepScreen=document.getElementById("screen-preparing");
const unlockScreen=document.getElementById("screen-unlocked");
const joinBtn=document.getElementById("join-btn");
const skipBtn=document.getElementById("skip-btn");
const countdownEl=document.getElementById("countdown");

let t=5, timer;

joinBtn.onclick=()=>{
  mainScreen.classList.remove("screen--active");
  prepScreen.classList.add("screen--active");
  timer=setInterval(()=>{
    t--;
    countdownEl.textContent=t;
    if(t===0)unlock();
  },1000);
};

skipBtn.onclick=unlock;

function unlock(){
  clearInterval(timer);
  prepScreen.classList.remove("screen--active");
  unlockScreen.classList.add("screen--active");
}
</script>

